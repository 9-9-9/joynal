<div class="container">

  <div class="journal-bar">
    <ul>
      <li><a caption="New entry" class='tab-head'  href="entry"><i class='fa fa-pencil'></i></a></li>
      <li><a caption="Your entries list" class='tab-head' href="list"><i class='fa fa-book '></i></a></li>
      <li><a caption="Map of your entries" class='tab-head' href="map"><i class='fa fa-globe'></i></a></li>
      <li><a caption="List your entries by dates" class='tab-head' href="calendar"><i class="fa fa-calendar"></i></a></li>
    </ul>
  </div>

  <div class="partial">
    <div class="chart-form">
      <%= form_for(:get_line_chart, url: get_line_chart_path, html: { class: 'get-line-chart' }, remote: true) do |f| %>
        <%= f.submit 'Get Line Chart', class: 'journal-submit' %>
      <% end %>
    </div>

    <div class="line-chart">
      <div class="class-description">
        <p>Sentiment Scores of Your Past Journals</p>
      </div>
    </div>
    <div id="slider"></div>

    <div class="chart-form">
      <%= form_for(:show_cloud, url: show_cloud_path, html: { class: 'show-cloud' }, remote: true) do |f| %>
        <%= f.submit value: 'Show cloud', class: 'journal-submit' %>
      <% end %>
    </div>

    <div class="cloud">
      <h3 id="cloud-info"><br></h3><br>
      <div id="chart-legend"></div>
    </div>

  </div>

</div>

